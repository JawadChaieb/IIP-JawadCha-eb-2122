<Window x:Class="WpfPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPizza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightYellow">
    <Grid>
        <RadioButton x:Name="pizza1" Content="hot and spicy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,175,0,0" Checked="pizza1_Checked"/>
        <RadioButton x:Name="pizza2" Content="4 seizoenen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,195,0,0" Checked="pizza2_Checked"/>
        <RadioButton x:Name="pizza3" Content="hawaï" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,215,0,0" Checked="pizza3_Checked"/>
        <TextBlock x:Name="txtTitel" Text="BESTEL JE PIZZA" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="70,104,0,0" Height="34" Width="208"><Run Text="TextBlock"/></TextBlock>
        <Image x:Name="imgControl" HorizontalAlignment="Left" Height="308" VerticalAlignment="Top" Width="199" Margin="585,48,0,0"/>
        <TextBlock x:Name="txtIngredienten" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="342,175,0,0" Height="48" Width="214"/>
    </Grid>
</Window>
