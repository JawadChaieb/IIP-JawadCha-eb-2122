<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblBoodschap" Content="Hallo, hoe is je naam?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="59,58,0,0" Height="46" Width="211" FontSize="20"/>
        <TextBox x:Name="txtNaam" HorizontalAlignment="Left" Height="46" TextWrapping="Wrap" VerticalAlignment="Top" Width="257" Margin="59,109,0,0" FontSize="16"/>
        <Button x:Name="btnOk" Content="ok" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="342,109,0,0" Height="46" Click="Button_Click" FontSize="20"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="473,109,0,0" Height="46" FontSize="20" Click="btnClear_Click"/>

    </Grid>
</Window>
